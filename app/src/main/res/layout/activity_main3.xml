<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181C27"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/logo_inicio"
        android:layout_width="136dp"
        android:layout_height="108dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046"
        app:srcCompat="@drawable/_123707d_05bb_4449_a965_bd873eda81d8" />

    <TextView
        android:id="@+id/NombreUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Bienvenido, Usuario"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/logo_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.186"
        app:layout_constraintStart_toEndOf="@+id/logo_inicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.256" />

    <TextView
        android:id="@+id/fecha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="fecha actual"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logo_inicio"
        app:layout_constraintTop_toBottomOf="@+id/NombreUsuario"
        app:layout_constraintVertical_bias="0.113" />

    <TextView
        android:id="@+id/realiza_pedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Realiza tu pedido"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/logo_inicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logo_inicio"
        app:layout_constraintTop_toBottomOf="@+id/fecha"
        app:layout_constraintVertical_bias="1.0" />


    <ImageView
        android:id="@+id/foto3"
        android:layout_width="142dp"
        android:layout_height="188dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.007"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/realiza_pedido"
        app:layout_constraintVertical_bias="0.17"
        app:srcCompat="@drawable/_0210903_171849" />

    <TextView
        android:id="@+id/titulo_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Prot Bomba Delantero"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/foto3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toTopOf="@+id/foto3"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/precio_3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="25.000 COP"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/foto3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/titulo_3"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/descripcion_3"
        android:layout_width="216dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elegantTextHeight="false"
        android:freezesText="false"
        android:text="Protege la bomba de freno delantero de tu motocicleta con el mejor accesorio"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/foto3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/precio_3"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/btn_car3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#304F7C"
        android:drawableLeft="@drawable/baseline_add_shopping_cart_24"
        android:drawablePadding="0dp"
        android:gravity="center_vertical|end"
        android:text="Agregar al carrito"
        android:textAlignment="center"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto3"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_3"
        app:layout_constraintVertical_bias="0.005" />

    <ImageView
        android:id="@+id/foto4"
        android:layout_width="142dp"
        android:layout_height="188dp"
        android:layout_marginStart="16dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto3"
        app:layout_constraintVertical_bias="0.323"
        app:srcCompat="@drawable/_0210903_164335" />

    <TextView
        android:id="@+id/titulo_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:text="Prot Tapa Tanque"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="@+id/foto4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toTopOf="@+id/foto4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/precio_4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="32.000 COP"
        android:textColor="#fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/foto4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toBottomOf="@+id/titulo_4"
        app:layout_constraintVertical_bias="0.037" />

    <TextView
        android:id="@+id/descripcion_4"
        android:layout_width="216dp"
        android:layout_height="63dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:elegantTextHeight="false"
        android:freezesText="false"
        android:text="Protege la tapa del tanque de tu motocicleta con el mejor accesorio"
        android:textAlignment="viewStart"
        android:textColor="#fff"
        app:autoSizeTextType="none"
        app:layout_constraintBottom_toBottomOf="@+id/foto4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toBottomOf="@+id/precio_4"
        app:layout_constraintVertical_bias="0.073" />

    <Button
        android:id="@+id/btn_car4"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="#304F7C"
        android:drawableLeft="@drawable/baseline_add_shopping_cart_24"
        android:drawablePadding="0dp"
        android:gravity="center_vertical|end"
        android:text="Agregar al carrito"
        android:textAlignment="center"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/foto4"
        app:layout_constraintTop_toBottomOf="@+id/descripcion_4"
        app:layout_constraintVertical_bias="0.033" />


    <Button
        android:id="@+id/btnAnt"
        android:layout_width="152dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#304F7C"
        android:drawableLeft="@drawable/baseline_navigate_before_24"
        android:text="Anterior"
        android:textColor="#fff"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto2"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>